<?xml version="1.0" encoding="utf-8"?>
<!--Background and design for each coin box-->

<!--declaring the shape-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!--    gradient background color-->
    <gradient
        android:angle="120"
        android:startColor="#1d0024"
        android:centerColor="#6f0979"
        android:endColor="#8900ff"/>
    <!--    border thickness and color-->
    <stroke android:width="1dp" android:color="@color/primary_background"/>
    <!--    border radius for each sides-->
    <corners android:radius="20dp"/>
</shape>
