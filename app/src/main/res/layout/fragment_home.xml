<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_color"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="0dp"
    tools:context=".Home">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/coin_box_background"
        android:padding="20dp"
        android:paddingBottom="0dp"
        >

        <TextView
            android:id="@+id/welcomeText"
            style="@style/Subheading20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome" />

        <TextView
            android:id="@+id/text"
            style="@style/Heading20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Make your first Investement Today"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/plain_button"
            android:fontFamily="@font/livvic_semi_bold"
            android:padding="10dp"
            android:text="Invest Today"
            android:textColor="@color/primary_background"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treding Coins"
        android:layout_marginTop="20dp"
        style="@style/Heading25"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trendingCoins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>